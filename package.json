{
  "name": "quizhive_backend",
  "version": "1.0.0",
  "description": "QuizHive Backend: A RESTful API for QuizHive: A Quiz App",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuizHive/QuizHive-Backend.git"
  },
  "scripts": {
    "test": "jest --env=node",
    "test:watch": "NODE_ENV=test jest --watch",
    "dev": "ts-node src/index.ts",
    "eslint": "eslint . --ext .js,.ts",
    "clean": "rm -rf ./dist",
    "build-ts": "tsc && ncp src/assets dist/assets",
    "build": "npm run clean && npm run build-ts",
    "start": "npm run build && node dist/index.js",
    "launch": "docker compose up --build -d",
    "down": "docker compose down",
    "deploy": "npm i && npm run down && npm run launch"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "morgan": "~1.9.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-themes": "^1.4.3",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.7.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@typegoose/typegoose": "^12.10.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/passport": "^1.0.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.16.0",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "mongoose": "^8.9.1",
    "ncp": "^2.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tslint": "^5.11.0",
    "typescript": "^5.7.2"
  },
  "private": true,
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/QuizHive/QuizHive-Backend/issues"
  },
  "homepage": "https://github.com/QuizHive/QuizHive-Backend#readme"
}
